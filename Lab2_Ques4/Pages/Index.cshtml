@page
@model IndexModel
@{
    ViewData["Title"] = "Question 4";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Multiplication Table and Factorials</title>
    <style>
        body {
            font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
            margin: 0;
            background-color: lightblue;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh; 
            overflow: auto;
        }

        .content-container {
            max-width: 90%;
            max-height: 100vh;
            padding: 20px;
            background: lightblue;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        label, input, table {
            display: block;
            margin-bottom: 10px;
            text-align: center;
            width: 100%;
        }

        input {
            max-width: 250px;
            border-radius: 15px;
            background-color: #f0f0f0;
        }

        #result {
            display: none;
            margin-top: 20px;
            font-weight: bold;
            padding: 10px;
            border: none;
            background-color: #f0f0f0;
            border-radius: 10px;
            width: fit-content;
            max-width: 100%;
            word-wrap: break-word;
            overflow: auto; 
        }

        table {
            border-collapse: collapse;
            width: 100%; 
            max-width: 100%;
            border: none;
        }

        td {
            padding: 5px; 
            text-align: center;
        }

        @@media (max-width: 600px) {
            table {
                font-size: 0.8em;
            }
        }


        button {
            color: blue;
            border-radius: 15px;
            padding: 10px 20px;
            background-color: darkgray;
            border: none;
            cursor: pointer;
        }

            button:hover {
                background-color: lightgray;
                color: white;
            }

    </style>
</head>

<body>
    <div class="content-container">
        <h1>Multiplication Table and Factorials</h1>
        <label for="number">Enter a number:</label>
        <input type="number" id="number" placeholder="Number" min="1">
        <button onclick="generateResults()">Generate</button>
        <div id="result"></div>
    </div>

    <script>
        function factorial(num) {
            if (num === 0 || num === 1) return 1;
            let result = 1;
            for (let i = 2; i <= num; i++) {
                result *= i;
            }
            return result;
        }

        function generateMultiplicationTable(n) {
            let table = '<table border="1" cellpadding="5" style="margin: 0 auto;">';
            for (let i = 1; i <= n; i++) {
                table += '<tr>';
                for (let j = 1; j <= n; j++) {
                    table += `<td>${i * j}</td>`;
                }
                table += '</tr>';
            }
            table += '</table>';
            return table;
        }

        function generateResults() {
            // user input
            const input = parseInt(document.getElementById('number').value);
            const resultElement = document.getElementById('result');

            // validation
            if (isNaN(input) || input < 1) {
                resultElement.innerHTML = "Please enter a valid number greater than 0.";
                resultElement.style.display = "block";
                return;
            }

            // generation of multiplication table and factorial of the number
            const multiplicationTable = generateMultiplicationTable(input);
            let factorials = '';
            for (let i = 1; i <= input; i++) {
                factorials += `${i}! = ${factorial(i)}<br>`;
            }

            // displaying of results
            resultElement.innerHTML = `<h2>Multiplication Table:</h2>${multiplicationTable}<h2>Factorials:</h2>${factorials}`;
            resultElement.style.display = "block";
        }
    </script>
</body>
</html>
