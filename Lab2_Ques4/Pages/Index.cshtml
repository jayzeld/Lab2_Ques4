@page
@model IndexModel
@{
    ViewData["Title"] = "Question 4";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Multiplication Table and Factorials</title>
    <style>
        body {
            font-family:'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            text-align: center;
        }

        input {
            padding: 8px;
            font-size: 16px;
            margin: 10px;
            width: 100%;
            max-width: 300px;
        }

        button {
            padding: 10px 20px;
            font-size: 16px;
            cursor: pointer;
        }

        #result {
            margin-top: 20px;
            font-weight: bold;
            white-space: pre-wrap; 
        }

        pre {
            display: inline-block; 
            text-align: left;
        }
    </style>
</head>
<body>
    <div>
        <h1>Multiplication Table and Factorials</h1>
        <label for="number">Enter a number:</label>
        <input type="number" id="number" placeholder="Number" min="1">
        <button onclick="generateResults()">Generate</button>
        <div id="result"></div>
    </div>

    <script>

        function factorial(num) {
            if (num === 0 || num === 1) return 1;
            let result = 1;
            for (let i = 2; i <= num; i++) {
                result *= i;
            }
            return result;
        }

        function generateMultiplicationTable(n) {
            let table = '';
            for (let i = 1; i <= n; i++) {
                let row = '';
                for (let j = 1; j <= n; j++) {
                    row += (i * j).toString().padStart(4, ' ');
                }
                table += row + '\n';
            }
            return table;
        }

        function generateResults() {
            //user input
            const input = parseInt(document.getElementById('number').value);

            //validation
            if (isNaN(input) || input < 1) {
                document.getElementById('result').innerHTML = "Please enter a valid number greater than 0.";
                return;
            }


            //generation of multiplciation table and factorial of the number
            const multiplicationTable = generateMultiplicationTable(input);
            let factorials = '';
            for (let i = 1; i <= input; i++) {
                factorials += `${i}! = ${factorial(i)}\n`;
            }

            //displaying of results
            document.getElementById('result').innerHTML = `<h2>Multiplication Table:</h2><pre>${multiplicationTable}</pre><h2>Factorials:</h2><pre>${factorials}</pre>`;
        }
    </script>
</body>
</html>
